// Jade file to specify output of a persons list
// Inherits from layout
extend layout


block content
  p
    +icon-primary("search")
    |  #{title}:
  // Create a table with one row per result
  form(method="get", action="/win_percent")
  p
          
    table.table.table-hover
      thead
        tr
          th Number
          th &nbsp;
          th Win percent
      tbody
      - for (var inx = 0; inx < results.length; inx++)
        tr
          td=results[inx].Name
          td &nbsp;
          td=results[inx].Win_percent
          
  // Put a click button that lets us return to the index page
  form(method='get', action='/team')
      button.btn.btn-default Return
